<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PushNotificationApp.Views.MessagePage">
    <ContentPage.Content>
        <StackLayout Padding="30" VerticalOptions="Center">
            <Entry Placeholder="Titulo" Text="{Binding Title}" />
            <Label Text="Mensagem" FontSize="Small" />
            <Editor HeightRequest="300" Text="{Binding Message}" />
            <Button Text="Enviar mensagem" BackgroundColor="Blue" TextColor="White" Command="{Binding SendCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>